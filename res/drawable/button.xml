<?xml version="1.0" encoding="utf-8" ?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
  <item android:state_pressed="true" >
    <shape>
      <solid
          android:color="#FB0000" />
      <stroke
          android:width="1dp"
          android:color="#A2A2A2" />
      <corners
          android:radius="3dp" />
    </shape>
  </item>
  <item>
    <shape>
      <gradient
          android:startColor="#FB0000"
          android:endColor="#C10000"
          android:angle="270" />
      <stroke
          android:width="1dp"
          android:color="#A2A2A2" />
      <corners
          android:radius="3dp" />
    </shape>
  </item>
</selector>